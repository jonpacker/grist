@font-face
  font-family embedded_font
  src url(https://s3-eu-west-1.amazonaws.com/jp-grist/embedded_font.woff) format('woff')
  font-style normal
  font-weight normal
@font-face
  font-family embedded_font
  src url(https://s3-eu-west-1.amazonaws.com/jp-grist/embedded_font_bold.woff) format('woff')
  font-style normal
  font-weight bold 

c_1 = #132537
c_2 = #006C80
c_3 = #EBCAB8
c_4 = #FE8315
c_5 = #FA3113

body 
  background-color c_1
  color c_4
  font-family embedded_font, sans-serif
  font-size 16px

body
html
  padding 0px
  margin 0px

.section:last-child
  padding-bottom 120px

h1
  font-size 64px

h2
  font-size 32px

.colindicate
  display inline-block
  margin 0px 8px
  width 18px
  height 18px
  border-radius 9px

.section
  width 70%
  padding 60px 15%
  margin 0 auto

  &.title
    color c_3
    background-color c_5
    text-align center

    h1
      margin-bottom 0px
    
    .namesub
      font-size 24px
      font-weight bold

      &:before
        content 'A '
        font-weight normal

      .brewer:before
        content ' by '
        font-weight normal

  &.batch-info
    background-color c_1
    color c_4

    h3
      color c_3
      margin 0px
      padding-bottom 0.5em
      margin-bottom 0.5em
      border-bottom 3px solid c_4

    font-size 18px
    position relative

    .batch-info
    .recipe-info
      display inline-block
      vertical-align top 
      width 35%

    .batch-info
      margin-right 4%
      margin-left 13%

    .key
    .val
      display inline-block
      width 35%
    .key
      color c_2
    .val 
      margin-right 15%
      font-weight bold

  &.fermentables
    background-color c_3
    color c_1
    text-align center

    font-size 18px

    h2
      margin-top 0px
    .key
    .val
      display inline-block
      width 48%
      padding 0px 1%
    .key
      text-align right
    .val 
      text-align left
      font-weight bold

  &.mash
    padding-top 0px
    background-color c_3
    color c_1
    font-size 18px

    text-align center

    h2
      margin-top 0px

    .mash-step
      width 27%
      display inline-block
      font-size 16px
      padding 20px 2%
      margin-right 1%
      margin-left 1%
      background-color c_4
      vertical-align top
      text-align left

      h3
        margin-top 0px
        margin-bottom 0.4em
        border-bottom 2px solid c_3
        line-height 24px

        .step-name 
          display inline-block
          width 80%
          line-height 22px
          font-size 18px

        .num
          font-size 30px
          color c_3
          display inline-block
          min-width 20%

        .mash-step-type
          font-size 8px 
          text-transform uppercase
          color c_3
          line-height 14px
          vertical-align top

      .key
      .value
        width 50%
        display inline-block

      .value
        font-weight bold
        text-align right
        
  &.additions
    font-size 18px
    text-align center

    h3.step
      color c_4
      font-size 16px
      text-transform uppercase
      text-align left
      border-bottom 2px solid c_4
      width 55.5%
      padding 0 7% 0.4em 7%
      margin 1.4em auto 0.6em

    h3.time 
      width 30%
      display inline-block
      vertical-align top
      margin 0px
      margin-right 2%
      text-align left
      line-height 48px
      color c_2
      .icon-time
        margin-right 15px
      .icon-arrow-right
        margin-top 15px
        margin-left 15px
        font-size 18px
        float right

    .addition
      text-align left
      display inline-block
      width 100%
      line-height 32px

      .name 
        font-weight bold
      .aa
        vertical-align top 
        display inline-block
        font-size 10px
        font-weight bold
        margin 0px 5px
        &:after
          content '%'
          font-size 12px

      .amount
        width 19%
        display inline-block

      .use
        text-transform uppercase
        display inline-block
        float right
        font-size 12px
        color c_2

    .addition-group
      display inline-block
      padding-top 10px
      margin-bottom 16px
      width 30%
      margin-left 2%
      vertical-align top
  &.yeast
    text-align center
    font-size 18px

    background-color c_4
    color c_1

    .code
      font-weight bold
      margin-right 16px

      & + .name 
        font-weight normal

    .name 
      font-weight bold

    .amount
      margin-left 25px
      font-weight bold
      &:before
        content 'â€”'
        display inline-block
        margin-right 25px
