@font-face
  font-family embedded_font
  src url(/stylesheets/embedded_font.woff) format('woff')
  font-style normal
  font-weight normal
@font-face
  font-family embedded_font
  src url(/stylesheets/embedded_font_bold.woff) format('woff')
  font-style normal
  font-weight bold 

c_1 = #132537
c_2 = #006C80
c_3 = #EBCAB8
c_4 = #FE8315
c_5 = #FA3113

body 
  background-color c_1
  color c_4
  font-family embedded_font, sans-serif
  font-size 18px

body
html
  padding 0px
  margin 0px

body
  padding-bottom 90px

h1
  font-size 62px

.colindicate
  display inline-block
  margin 0px 8px
  width 18px
  height 18px
  border-radius 9px

.section
  width 70%
  padding 60px 15%
  margin 0 auto

  &.title
    color c_3
    background-color c_5
    text-align center

    h1
      margin-bottom 0px
    
    .namesub
      font-size 30px
      font-weight bold

      &:before
        content 'A '
        font-weight normal

      .brewer:before
        content ' by '
        font-weight normal

  &.batch-info
    background-color c_1
    color c_4
    text-align center

    h3
      color c_3
      margin 0px
      padding-bottom 0.5em
      margin-bottom 0.5em
      border-bottom 3px solid c_4

    font-size 24px
    position relative

    .batch-info
    .recipe-info
      display inline-block
      vertical-align top 
      width 30%
      margin-right 3%

    .key
    .val
      display inline-block
      width 45%
      padding 0px 2.5%
    .key
      text-align right
      color c_2
    .val 
      text-align left
      font-weight bold

  &.fermentables
    background-color c_3
    color c_1
    text-align center

    font-size 24px

    h2
      margin-top 0px
    .key
    .val
      display inline-block
      width 48%
      padding 0px 1%
    .key
      text-align right
    .val 
      text-align left
      font-weight bold

  &.mash
    padding-top 0px
    background-color c_3
    color c_1
    font-size 24px

    text-align center

    h2
      margin-top 0px

    .mash-step
      width 27%
      display inline-block
      font-size 18px
      padding 20px 2%
      margin-right 1%
      margin-left 1%
      background-color c_4
      vertical-align top
      text-align left

      h3
        margin-top 0.3em 
        margin-bottom 0.4em
        border-bottom 2px solid c_3
        line-height 24px

        .step-name 
          display inline-block
          width 82.5%
          line-height 22px
          font-size 24px

        .num
          font-size 36px
          color c_3
          display inline-block
          min-width 17.5%

        .mash-step-type
          font-size 12px 
          text-transform uppercase
          color c_3
          line-height 14px
          vertical-align top

      .key
      .value
        width 50%
        display inline-block

      .value
        font-weight bold
        text-align right
        
  &.additions
    font-size 24px
    text-align center

    h3.time 
      width 20%
      display inline-block
      vertical-align top
      margin 0px
      text-align left
      line-height 48px
      color c_2
      .icon-time
        margin-right 15px
      .icon-arrow-right
        margin-top 15px
        margin-left 15px
        font-size 18px
        float right

    .addition
      text-align left
      display inline-block
      width 100%
      line-height 32px

      .name 
        font-weight bold
      .aa
        vertical-align top 
        display inline-block
        font-size 14px
        font-weight bold
        margin 0px 5px
        &:after
          content '%'
          font-size 12px

      .amount
        margin 0px 20px

      .use
        text-transform uppercase
        font-size 18px
        color c_2

    .addition-group
      display inline-block
      padding-top 10px
      margin-bottom 16px
      width 78%
      margin-left 2%
      vertical-align top

      
